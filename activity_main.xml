                android:text="@string/zagadka_11" />

            <EditText
                android:id="@+id/answer_11"
                style="@style/OrdinaryEditTextStyle" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/done" />
    </LinearLayout>

</ScrollView>
